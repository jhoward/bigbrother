					\ifx\csm@found@endhead\@false%
						\csm@ogs@error{Multi-page tables MUST have a header.}%
					\fi%
				\fi%
			}
		}{
			% ``lscape'' not loaded
		}
	}{
		% ``longtable'' not loaded
	}
