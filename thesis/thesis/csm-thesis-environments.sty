	\csm@wrap@setspace@environ{alignat}
	\csm@wrap@setspace@environ{alignat*}
	\csm@wrap@setspace@environ{flalign}
	\csm@wrap@setspace@environ{flalign*}
	\csm@wrap@setspace@environ{gather}
	\csm@wrap@setspace@environ{gather*}
	\csm@wrap@setspace@environ{multline}
	\csm@wrap@setspace@environ{multline*}
